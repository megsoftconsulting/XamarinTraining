<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Notificaciones"
    x:Class="Notificaciones.MainPage"
    Title="Notifications">
    <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="ActivityIndicator" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked"></Button>
        <Button Text="Alerts" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_1"></Button>
        <Button Text="Local Notifications" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_2"></Button>
        <Button Text="Toast" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_3"></Button>
    </StackLayout>
</ContentPage>