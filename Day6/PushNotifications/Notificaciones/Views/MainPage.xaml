<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Notificaciones.MainPage"
    Title="Notifications">
    <StackLayout VerticalOptions="CenterAndExpand">
        <Button Text="ActivityIndicator" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked" />
        <Button Text="Alerts" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_1" />
        <Button Text="Local Notifications" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_2" />
        <Button Text="Toast" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Clicked="Handle_Clicked_3" />
    </StackLayout>
</ContentPage>