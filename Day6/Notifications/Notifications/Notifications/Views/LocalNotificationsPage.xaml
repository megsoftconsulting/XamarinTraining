<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Notifications.Views.LocalNotificationsPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand">
            <Button Text="Show notification now" Clicked="ShowNotification_Clicked" />
            <Button Text="Show notification in 5 seconds" Clicked="AfterSeconds_Clicked" />
            <Button Text="Cancel Notification" Clicked="CancelNotification_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>