<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:ListViewSample.ViewModels"
             x:Class="ListViewSample.Views.MusicDetailPage">
    <ContentPage.BindingContext>
        <local:MusicsViewModel />
 </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Padding="30">  
                <Image x:Name="MusicPicture" Source="Music" WidthRequest="120" HeightRequest="120" />
                 <Label x:Name="LabelTitle" FontAttributes="Bold" FontSize="14" TextColor="Red"  Margin="10,16,0,0"/>
                 <Label x:Name="LabelDescription" FontSize="16" TextColor="Silver" Margin="10,6,0,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
